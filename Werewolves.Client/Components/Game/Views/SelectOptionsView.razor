@using Werewolves.Client.Services
@inject GameClientManager GameClient

<MudContainer MaxWidth="MaxWidth.Small">
    <MudText Typo="Typo.h6" GutterBottom="true">Select Option</MudText>
    
    <MudRadioGroup T="string" @bind-Value="_selectedOption">
        <MudRadio Value="@("Option 1")" Color="Color.Primary">Option 1</MudRadio>
        <MudRadio Value="@("Option 2")" Color="Color.Secondary">Option 2</MudRadio>
    </MudRadioGroup>

    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="mt-4" OnClick="SubmitOption" Disabled="@string.IsNullOrEmpty(_selectedOption)">
        Confirm Option
    </MudButton>
</MudContainer>

